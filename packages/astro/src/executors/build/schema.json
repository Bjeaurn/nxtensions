{
  "$schema": "http://json-schema.org/schema",
  "$id": "NxAstroBuildExecutor",
  "cli": "nx",
  "title": "Astro build executor",
  "type": "object",
  "properties": {
    "config": {
      "type": "string",
      "description": "Specify the path, relative to the project root, to the Astro config file.",
      "default": "astro.config.mjs"
    },
    "drafts": {
      "type": "boolean",
      "description": "Include markdown draft pages in the build.",
      "default": false
    },
    "deleteOutputPath": {
      "type": "boolean",
      "description": "Delete the output path before building.",
      "default": true
    },
    "experimentalSsr": {
      "type": "boolean",
      "description": "Enable SSR compilation.",
      "default": false
    },
    "legacyBuild": {
      "type": "boolean",
      "description": "Use the build strategy prior to v0.24.0.",
      "default": false
    },
    "silent": {
      "type": "boolean",
      "description": "Disable logging.",
      "default": false
    },
    "sitemap": {
      "type": "boolean",
      "description": "Enable sitemap generation.",
      "default": true
    },
    "verbose": {
      "type": "boolean",
      "description": "Enable verbose logging.",
      "default": false
    }
  },
  "additionalProperties": false,
  "required": []
}
